@model WebApp_Models.Cart
<h1>Product Details</h1>
<form method="post">
    <div class="row">
        <div class="col-6">
            <img src="@Model.Product.ImageUrl" alt="Product Image" width="200" height="200" />
            <input type="hidden" asp-for="ProductId" />
        </div>
        <div class="col-6">
            <div class="row">
                <label asp-for="Product.Name">Product Title: @Model.Product.Name</label>
                <label asp-for="Product.Description">Product Description:@Html.Raw(Model.Product.Description)</label>
                <label asp-for="Product.Price">Product Price:@Model.Product.Price.ToString("0.00")</label>
                <label asp-for="Product.Category.Id">@Model.Product.Category.Name</label>
                <div class="form-control">
                        <label asp-for="Count"></label>
                        <input asp-for="Count" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                </div>
                <div class="form-control">
                    <a class="btn btn-success" asp-area="Customer" asp-controller="Home" asp-action="Index">Back To List</a>
                    <button type="submit" class="btn btn-dark">Add To Cart</button>
                </div>

            </div>

        </div>
    </div>
</form>